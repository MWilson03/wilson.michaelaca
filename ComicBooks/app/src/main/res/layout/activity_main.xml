<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.michaelwilson.android.aca.comicbooks.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comic Book Junkies!"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/titleInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/issueNumberInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/titleInput"
        android:layout_alignRight="@+id/titleInput"
        android:layout_alignEnd="@+id/titleInput"
        android:layout_marginTop="46dp" />

    <EditText
        android:id="@+id/conditionInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/outputText"
        android:layout_alignBottom="@+id/outputText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/basePriceInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/outputText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addButton" />

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/issueNumberInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Add"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>